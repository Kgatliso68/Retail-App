@model ABCRetailAzureApp.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="display-4">ABC Retail Dashboard</h1>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">@Model.TotalCustomers</h4>
                        <p class="card-text">Total Customers</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">@Model.TotalProducts</h4>
                        <p class="card-text">Total Products</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-box fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">@Model.ActiveProducts</h4>
                        <p class="card-text">Active Products</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-plus"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <a asp-controller="Customers" asp-action="Create" class="btn btn-primary me-2">
                    <i class="fas fa-user-plus"></i> Add Customer
                </a>
                <a asp-controller="Products" asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Add Product
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Recent -->
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-users"></i> Recent Customers</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentCustomers.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Registered</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model.RecentCustomers)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Customers" asp-action="Details" asp-route-id="@customer.CustomerId">
                                                @customer.FullName
                                            </a>
                                        </td>
                                        <td>@customer.Email</td>
                                        <td>@customer.RegistrationDate.ToString("MM/dd/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center">
                        <a asp-controller="Customers" asp-action="Index" class="btn btn-outline-primary btn-sm">
                            View All Customers
                        </a>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">No customers found. <a asp-controller="Customers" asp-action="Create">Add the first customer</a></p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-box"></i> Recent Products</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentProducts.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Category</th>
                                    <th>Price</th>
                                    <th>Stock</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.RecentProducts)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId">
                                                @product.ProductName
                                            </a>
                                        </td>
                                        <td>@product.Category</td>
                                        <td>@product.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-ZA"))</td>
                                        <td>@product.StockQuantity</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-success btn-sm">
                            View All Products
                        </a>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">No products found. <a asp-controller="Products" asp-action="Create">Add the first product</a></p>
                }
            </div>
        </div>
    </div>
</div>
