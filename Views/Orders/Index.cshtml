@model IEnumerable<ABCRetailAzureApp.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<a asp-controller="Orders" asp-action="Create" class="btn btn-success mb-3">
    <i class="bi bi-plus-lg"></i> Add New Order
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer ID</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.CustomerId</td>
                <td>@order.TotalAmount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-ZA"))</td>
                <td>@order.Status</td>
                <td>@order.CreatedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-controller="Orders" asp-action="Details" asp-route-orderId="@order.OrderId" asp-route-customerId="@order.CustomerId" class="btn btn-primary btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>


