@model ABCRetailAzureApp.Models.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Edit Product";
}

<h2><i class="fas fa-edit"></i> Edit Product</h2>
<hr />

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Product.PartitionKey" />
                    <input type="hidden" asp-for="Product.RowKey" />
                    <input type="hidden" asp-for="Product.ETag" />
                    <input type="hidden" asp-for="Product.CreatedDate" />
                    <input type="hidden" asp-for="ExistingImageUrl" />

                    <div class="form-group mb-3">
                        <label asp-for="Product.ProductName" class="control-label"></label>
                        <input asp-for="Product.ProductName" class="form-control" />
                        <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Product.Description" class="control-label"></label>
                        <textarea asp-for="Product.Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Product.Price" class="control-label"></label>
                                <input asp-for="Product.Price" class="form-control" type="number" step="0.01" min="0.01" />
                                <span asp-validation-for="Product.Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Product.StockQuantity" class="control-label"></label>
                                <input asp-for="Product.StockQuantity" class="form-control" />
                                <span asp-validation-for="Product.StockQuantity" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Product.Category" class="control-label"></label>
                                <select asp-for="Product.Category" class="form-control">
                                    <option value="">-- Select Category --</option>
                                    <option value="Electronics">Electronics</option>
                                    <option value="Clothing">Clothing</option>
                                    <option value="Books">Books</option>
                                    <option value="Home & Garden">Home & Garden</option>
                                    <option value="Sports">Sports</option>
                                    <option value="Toys">Toys</option>
                                    <option value="Beauty">Beauty</option>
                                    <option value="Automotive">Automotive</option>
                                </select>
                                <span asp-validation-for="Product.Category" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Product.Brand" class="control-label"></label>
                                <input asp-for="Product.Brand" class="form-control" />
                                <span asp-validation-for="Product.Brand" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
                    {
                        <div class="form-group mb-3">
                            <label class="control-label">Current Image</label>
                            <div>
                                <img src="@Model.ExistingImageUrl" class="img-thumbnail" style="max-height: 150px;" alt="Current product image" />
                                <p class="text-muted"><small>Current image stored in Azure Blob Storage</small></p>
                            </div>
                        </div>
                    }

                    <div class="form-group mb-3">
                        <label asp-for="ImageFile" class="control-label">@(string.IsNullOrEmpty(Model.ExistingImageUrl) ? "Product Image" : "Replace Image")</label>
                        <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                        <div class="form-text">
                            @if (string.IsNullOrEmpty(Model.ExistingImageUrl))
                            {
                                <text>Upload a product image (JPEG, PNG, GIF). The image will be stored in Azure Blob Storage.</text>
                            }
                            else
                            {
                                <text>Leave empty to keep current image, or select a new image to replace it in Azure Blob Storage.</text>
                            }
                        </div>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Product.IsActive" />
                        <label class="form-check-label" asp-for="Product.IsActive">
                            Product is active and available for sale
                        </label>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Update Product
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Product.ProductId" class="btn btn-info">
                            <i class="fas fa-eye"></i> View Details
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-list"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-info-circle"></i> Product Info</h5>
            </div>
            <div class="card-body">
                <p><strong>Product ID:</strong> @Model.Product.ProductId</p>
                <p><strong>Created:</strong> @Model.Product.CreatedDate.ToString("MM/dd/yyyy")</p>
                <p><strong>Last Updated:</strong> @Model.Product.LastUpdated.ToString("MM/dd/yyyy")</p>
                <p class="text-muted">Make changes to update this product's information in Azure Table Storage.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        
        document.querySelector('input[type="file"]').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    let preview = document.querySelector('#newImagePreview');
                    if (!preview) {
                        preview = document.createElement('div');
                        preview.id = 'newImagePreview';
                        preview.className = 'mt-2';
                        preview.innerHTML = '<p class="text-muted"><small>New image preview:</small></p><img class="img-thumbnail" style="max-height: 150px;" />';
                        e.target.parentNode.appendChild(preview);
                    }
                    preview.querySelector('img').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}
